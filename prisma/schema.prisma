// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Profile - extends Clerk user data
model UserProfile {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Links to Clerk user ID
  email     String
  firstName String?
  lastName  String?
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  listings Listing[]

  @@map("user_profiles")
}

// Game Listing
model Listing {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  condition   String   // New, Like New, Good, Used, Fair
  location    String?
  imageUrl    String?
  
  // Relations
  userId      String
  user        UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  @@map("listings")
}
